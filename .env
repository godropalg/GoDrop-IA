# FileDrop Real - Environment Variables
PORT=3000

# MongoDB (opzionale - se non configurato, usa memoria)
# Ottieni un MongoDB Atlas gratuito: https://www.mongodb.com/cloud/atlas
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/filedrop?retryWrites=true&w=majority

# Configurazione
MAX_FILE_SIZE=5368709120  # 5GB in bytes
SESSION_EXPIRE_HOURS=24
UPLOAD_DIR=./uploads

# Sicurezza
ENABLE_RATE_LIMITING=false
TRUST_PROXY=1
